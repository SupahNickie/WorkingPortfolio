<h1>Listing blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr id="<%= dom_id(blog) %>">
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to 'Show', blog %></td>
        <% if policy(blog).edit? %>
          <td><%= link_to 'Edit', edit_blog_path(blog), remote: true, id: "edit_link" %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Blog).create? %>
  <%= link_to 'New Blog', new_blog_path, remote: true, id: "new_link" %>
<% end %>
