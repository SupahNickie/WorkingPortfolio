<h1>Projects</h1><br>

<% @projects.each do |project| %>
  <div class="project_index" id="<%= dom_id(project) %>">
    <div class="project_pic">
      <% if project.photos.any? %>
        <%= link_to image_tag(project.photos.first.photo.url(:thumb)), project %><br>
      <% end %>
    </div>
    <div class="project_text">
      <p id="project_name"><%= project.title %></p>
      <p id="project_subheading"><%= project.subheading %></p>
      <p><%= link_to 'View It!', project %>
      <% if policy(project).edit? %>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </div>
  </div>
<% end %>
<br>

<div id="new_project">
  <% if policy(Project).create? %>
    <%= link_to 'New Project', new_project_path %>
  <% end %>
</div>
